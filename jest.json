{
  "rootDir": ".",
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.{js}"
  ],
  "testPathIgnorePatterns": [
    "/node_modules",
    "/dist"
  ],
  "transform": {
    "^.+\\.jsx$": "babel-jest",
    "^.+\\.js$": "babel-jest"
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/dist"
  ],
  "verbose": true
}
